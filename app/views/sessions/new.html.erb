<h1>Вход</h1>
<%= form_tag create_session_path do %>
  <p id="notice"><%= notice %></p>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag 'Log In' %>
  </div>
<% end %>
